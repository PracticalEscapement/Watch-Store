<h1>Order Summary</h1>


<div>
  <%= "SHIPPING: #{@shipping_address.full_address}" %></br>
  <% if @billing_address.present? %>
    <%= "BILLING: #{@billing_address.full_address}" %>
  <% end %>
</div>
--------------------------
<div>
  <% @line_items.each_with_index do |line_item, index| %>
    <%= "#{index + 1}.) #{line_item.item.description}(#{line_item.quantity}): $#{line_item.item.price_in_dollars}" %></br>
  <% end %>
</div>
<br><%= "Subtotal: #{number_to_currency(@shopping_cart.subtotal)}" %>
<br><%= "Tax: #{number_to_currency(@tax)}" %>
<br><%= "Shipping: Free!" %>
<br><%= "TOTAL: #{number_to_currency(@shopping_cart.total)}" %>

<%= form_with model: @order, method: :post do |form| %>
  <div class="mb-3">
    <%= form.button "Checkout", class: "btn btn-primary", data: { disable_with: "Please wait..." } %>
  </div>
  <% end %>