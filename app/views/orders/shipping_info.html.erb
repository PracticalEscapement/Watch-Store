<h1>Orders#new</h1>
<p>shipping_info</p>

<%= form_with model: @address, url: add_shipping_info_path do |form| %>
    <div class="mb-3">
        <%= form.label :first_name %>
		<%= form.text_field :first_name, class: "form-control" %>
    </div>
    <div class="mb-3">
        <%= form.label :last_name %>
		<%= form.text_field :last_name, class: "form-control" %>
    </div>
    <div class="mb-3">
        <%= form.label :street_address %>
		<%= form.text_field :street_address, class: "form-control" %>
    </div>
    <div class="mb-3">
        <%= form.label :street_address_unit %>
		<%= form.text_field :street_address_unit, class: "form-control" %>
    </div>
    <div class="mb-3">
        <%= form.label :city %>
		<%= form.text_field :city, class: "form-control" %>
    </div>
    <div class="mb-3">
        <%= form.label :state %>
		<%= form.text_field :state, class: "form-control" %>
    </div>
    <div class="mb-3">
        <%= form.label :country %>
		<%= form.text_field :country, class: "form-control" %>
    </div>
    <div class="mb-3">
        <%= form.label :zip_code %>
		<%= form.text_field :zip_code, class: "form-control" %>
    </div>
    <div class="mb-3">
        <%= form.label :phone_number %>
		<%= form.text_field :phone_number, class: "form-control" %>
    </div>
    
	<div class="mb-3">
		<%= form.submit "Continue", class: "btn btn-primary", data: { disable_with: "Please wait..." } %>
	</div>
<% end %>
